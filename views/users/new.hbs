<div class="login">
<div class="span3 well">
      <legend>Signup for new account!</legend>
    <form accept-charset="UTF-8" id="new-user-form" action="/users" method="post" enctype="multipart/form-data">
        <label for="firstName">Name: </label>
        <input class="span3" id="firstName" type="firstName" name="firstName" placeholder="Enter Name" value="" />
        <label for="email">Email: </label>
		    <input class="span3" id="email" name="email" placeholder="Enter email" type="email" value="" >
        <label for="password">Password: </label> 
        <input class="span3" id="password" name="password" placeholder="Password" type="password" value="">
