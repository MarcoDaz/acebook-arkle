<form action="/posts/{{post._id}}" method="post">
  <input
    type="text"
    name="newComment"
    id="newComment"
    placeholder="Add new comment here.."
  />
  <input type="submit" value="Submit" />
</form>

<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2 class="page-header">Comments</h2>
        <section class="comment-list">
          {{#each comments }}
            <article class="row">
            {{!-- div with user image --}}
            <div class="col-md-2 col-sm-2 hidden-xs">
              <figure class="thumbnail">
                {{!-- put image.data.toString('base64') of user in thise img tag --}}
                <img class="img-responsive" src="http://www.tangoflooring.ca/wp-content/uploads/2015/07/user-avatar-placeholder.png" />
                {{!-- put firstName of user in thise img tag --}}
                <figcaption class="text-center">{{this.firstName}}</figcaption>
              </figure>
            </div>
            {{!-- div with comment stuff --}}
            <div class="col-md-10 col-sm-10">
              <div class="panel panel-default arrow left">
                <div class="panel-body">
                  <header class="text-left">
                    <div class="comment-user"><i class="fa fa-user"></i>{{this.firstName}}</div>
                    <time class="comment-date" datetime="16-12-2014 01:05"><i class="fa fa-clock-o"></i>{{this.date}}</time>
                  </header>
                  <div class="comment-post">
                    <p>{{this.message}}</p>
                  </div>
                </div>
              </div>
            </div>
          </article>
          {{/each}}
