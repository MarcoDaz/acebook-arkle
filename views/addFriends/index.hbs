<form action="/addFriends" method="get">
  <input type="text" name="searchTerm" id="searchTerm" placeholder="Search Here.." required>
  <input type="submit" value="Find">
</form>
<ul>
  {{!-- display search results --}}
  {{#each results }}
    <li>
      <img src="" alt="">
      <h4>{{this.name}}</h4>
      <p>{{this.email}}</p>
      <form action="/" method="post">Send Request</form>
    </li>
  {{/each}}
</ul>